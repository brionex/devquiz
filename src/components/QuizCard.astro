---
import ArrowRight from '@icons/ArrowRight.astro'

interface Props {
  url: string
  title: string
  image: string
  numQuestions: number
  color: string
}

const { url, title, image, numQuestions, color } = Astro.props
---

<a href={`/quiz/${url}`}>
  <article
    class="relative flex h-full gap-5 p-5 overflow-hidden transition-transform border border-gray-400 cursor-pointer hover:scale-110 rounded-2xl group hover:border-sky-blue"
  >
    <picture>
      <img
        class="w-16 h-16 transition-transform aspect-square group-hover:-rotate-12 group-hover:scale-110"
        src={image}
        alt="logo of the technology"
        loading="lazy"
      />
    </picture>

    <div>
      <h3 class="mb-2 font-bold">{title}</h3>
      <p class="text-gray-400">{numQuestions} preguntas</p>
    </div>

    <ArrowRight
      class="absolute w-8 h-8 text-gray-400 group-hover:text-sky-blue right-4 bottom-2"
    />
  </article>
</a>

<style define:vars={{ color }}>
  article {
    background: linear-gradient(to right, var(--color) -200%, transparent);
  }
</style>
