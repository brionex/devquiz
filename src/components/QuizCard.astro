---
interface Props {
  id: string
  name: string
  image: string
  numQuestions: number
  difficulty: string
}

const { id, name, image, numQuestions, difficulty } = Astro.props
---

<a href={`/${id}`}>
  <article
    class="flex p-5 border border-gray-400 overflow-hidden cursor-pointer relative gap-5 bg-dark-navy/25 hover:bg-light-blue/10 hover:scale-110 transition-transform rounded-lg"
  >
    <picture class="w-16 h-16 self-center">
      <img class="h-16 aspect-square" src={image} alt="icon image" />
    </picture>

    <div>
      <h3 class="text-xl mb-2">{name}</h3>
      <p class="text-sm text-gray-400">Dificultad: {difficulty}</p>
      <p class="text-sm text-gray-400">Preguntas: {numQuestions}</p>
    </div>
  </article>
</a>

