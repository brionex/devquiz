---
import ArrowRight from '@icons/ArrowRight.astro'

interface Props {
  url: string
  title: string
  image: string
  numQuestions: number
  color: string
}

const { url, title, image, numQuestions, color } = Astro.props
---

<a href={`/quiz/${url}`}>
  <article
    class="flex border border-gray-400 cursor-pointer gap-5 p-5 hover:scale-110 transition-transform rounded-2xl h-full group overflow-hidden hover:border-sky-blue relative"
  >
    <picture>
      <img
        class="aspect-square w-16 h-16 group-hover:-rotate-12 group-hover:scale-110 transition-transform"
        src={image}
        alt="logo of the technology"
        loading="lazy"
      />
    </picture>

    <div>
      <h3 class="font-bold mb-2">{title}</h3>
      <p class="text-gray-400">{numQuestions} preguntas</p>
    </div>

    <ArrowRight
      class="w-8 h-8 text-gray-400 group-hover:text-sky-blue absolute right-4 bottom-2"
    />
  </article>
</a>

<style define:vars={{ color }}>
  article {
    background: linear-gradient(to right, var(--color) -200%, transparent);
  }
</style>
