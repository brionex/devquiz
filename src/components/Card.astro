---
interface Props {
  id: string
  title: string
  image: string
  numQuestions: number
  difficulty: string
}

const { id, title, image, numQuestions, difficulty } = Astro.props
---

<a href={`/quiz/${id}`}>
  <article
    class="flex p-5 border border-gray-400 cursor-pointer gap-5 bg-dark-navy/25 hover:bg-light-blue/10 hover:scale-110 transition-transform rounded-lg h-full group items-center"
  >
    <picture
      class="w-16 h-16 group-hover:scale-110 transition-transform group-hover:-rotate-12"
    >
      <img
        class="aspect-square"
        src={image}
        alt="logo of the technology"
        loading="lazy"
      />
    </picture>

    <div>
      <h3 class="font-bold mb-2">{title}</h3>
      <p class="text-gray-400">Dificultad: {difficulty}</p>
      <p class="text-gray-400">Preguntas: {numQuestions}</p>
    </div>
  </article>
</a>
