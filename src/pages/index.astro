---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Welcome to Astro.">
  <section class="flex flex-col gap-5 items-center pt-14">
    <figure class="max-w-32">
      <img
        class="drop-shadow-[0_0px_10px_#fff5]"
        src="/python.svg"
        alt="imagen del logo de python"
      />
    </figure>
    <h1 class="text-7xl font-bold text-white">Python Quiz</h1>
    <button
      class="btn-start w-full border border-white max-w-[400px] mt-10 py-4 text-white text-2xl hover:bg-py-yellow hover:text-black font-semibold transition-colors"
      >Empezar</button
    >
  </section>
</Layout>

