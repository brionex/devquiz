---
import QuestionsJson from '../../lib/questions.json'

const json = JSON.stringify(QuestionsJson)
---

<section
  data-json={json}
  class="quiz-question hidden py-10 flex-col gap-11 text-white"
>
  <p class="progress font-['Fredoka'] gap-2 text-xl text-center drop-shadow-sm flex items-center justify-center">
    Pregunta <span class="glide-text progress-number">0</span> de {QuestionsJson.length}
  </p>
  <p class="glide-text question text-5xl text-center font-bold">Pregunta</p>
  <div
    class="options grid grid-cols-1 place-items-center *:py-3 *:border gap-3 *:text-center *:w-[90%] md:*:w-[80%] hover:*:text-black *:max-w-[400px] hover:*:bg-py-yellow cursor-default *:font-medium text-lg"
  >
    <button class="glide-text">opcion</button>
    <button class="glide-text">opcion</button>
    <button class="glide-text">opcion</button>
    <button class="glide-text">opcion</button>
  </div>
</section>

<style>
  .incorrect {
    @apply bg-red-400 hover:bg-red-400 text-white scale-110 transition-transform;
  }
  .correct {
    @apply bg-green-400 hover:bg-green-400 text-white scale-110 transition-transform;
  }

  section.show-question {
    display: flex;
    animation: show-elem 0.3s both 0.5s;
  }
</style>
